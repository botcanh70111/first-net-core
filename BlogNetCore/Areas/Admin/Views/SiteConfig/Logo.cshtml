@model Services.Models.SiteConfig

@section OuterContainer {
    <div class="manager-container unshow" id="fileManager" data-manager-url="/request/filemanager/getlogos">
        <div class="manager-modal">
            <div class="manager-body">
                <div class="manager-images"></div>
            </div>
            <div class="manager-footer">
                <button class="choose-image" value="">Select</button>
                <button class="close-manager">Close</button>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col s12">
        <div>
            <h4>Update Logo</h4>
        </div>
        <form asp-area="Admin" asp-controller="SiteConfig" asp-action="UpdateLogo" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="OwnerId" value="@Model.OwnerId" />
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" data-target-input="#fileManager" name="Value" value="@Model.Value" />
            <div class="">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" required/>
            </div>
            <div style="display: flex; justify-content: space-between">
                <div>
                    <label asp-for="@Model.Value"></label>
                    <input type="file" name="Image" />
                </div>
                <div>
                    <span>Or</span>
                    <button type="button" data-target="#fileManager">Select from uploaded</button>
                </div>
            </div>
            <br />
            <div class="">
                <button type="submit" class="waves-effect waves-light btn">Submit</button>
            </div>
        </form>
    </div>
</div>