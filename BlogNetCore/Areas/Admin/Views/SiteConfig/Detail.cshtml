@model SiteConfig

<div class="row">
    <div class="col s12">
        <div>
            <h4>Update @ViewData["Type"]</h4>
        </div>
        <form asp-area="Admin" asp-controller="SiteConfig" asp-action="CreateOrUpdate" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="OwnerId" value="@Model.OwnerId" />
            <input type="hidden" name="Type" value="@(ViewData["Type"].ToString())" />

            <div class="">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" />
            </div>
            <div class="">
                <label asp-for="@Model.Value"></label>
                <input asp-for="@Model.Value" />
            </div>
            <div class="">
                <label asp-for="@Model.Order"></label>
                <input asp-for="@Model.Order" />
            </div>

            <br />
            <div class="">
                <button type="submit" class="waves-effect waves-light btn">Submit</button>
            </div>
        </form>
    </div>
</div>