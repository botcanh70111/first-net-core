@using Services.Constants
@inject BlogNetCore.DataServices.IUserManager userManager

@if (userManager.HasPermission(Context, PermissionClaims.ViewBlogs))
{

    <li>
        <div class="collapsible-header">
            <i class="material-icons">category</i>Categories
            <i class="material-icons li-right">arrow_drop_down</i>
        </div>
        <div class="collapsible-body">
            <ul class="collapsible">
                @if (userManager.HasPermission(Context, PermissionClaims.CreateBlog))
                {
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">add</i>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Detail">Create</a>
                        </div>
                    </li>
                }

                <li>
                    <div class="collapsible-header">
                        <i class="material-icons">leaderboard</i>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index">Manage</a>
                    </div>
                </li>
            </ul>
        </div>
    </li>
}