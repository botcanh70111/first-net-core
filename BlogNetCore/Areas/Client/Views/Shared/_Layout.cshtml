@model BlogNetCore.Client.Models.LayoutViewModel

<!DOCTYPE html>
<html>

<head>
    <title>@Model.Title</title>
    <link rel="stylesheet" href="~/Vendors/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/Vendors/bootstrap/css/all.css">
    <link rel="stylesheet" href="~/Vendors/slick/slick.css">
    <link rel="stylesheet" href="~/Vendors/slick/slick-theme.css">

    <!-- <link rel="stylesheet" href="./vendors/css/bootstrap-theme.min.css"> -->
    <link rel="stylesheet" href="~/Client/main.css">

    <link href="https://fonts.googleapis.com/css2?family=Karla&family=Source+Serif+Pro&display=swap" rel="stylesheet">
</head>

<body>
    @*@Html.Partial("_Login", Model.Login)*@
    <partial name="_Register" model="@Model.RegisterForm" />
    <partial name="_Login" model="@Model.Login" />
    <header>
        <div class="logo-center">
            <a asp-controller="Home" asp-action="Index">
                @if (Model.LogoConfig != null)
                {
                    <img src="@Model.LogoConfig.Value" alt="">
                }
            </a>
        </div>
        @await Component.InvokeAsync("Navigation")
    </header>

    <div class="container regular-padding">
        <div class="row flex">
            <div class="col-md-8 col-sm-12">
                @RenderBody()
            </div>

            <!-- Right side -->
            <div class="col-md-4 col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel">
                            <h4 class="title">Latest Stories</h4>
                            <div class="flex-center">
                                <a class="social-icon" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="social-icon" href=""><i class="fab fa-twitter"></i></a>
                                <a class="social-icon" href=""><i class="fab fa-instagram"></i></a>
                                <a class="social-icon" href=""><i class="fab fa-youtube"></i></a>
                                <a class="social-icon" href=""><i class="fab fa-linkedin"></i></a>
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="panel">
                            <h4 class="title">Let's Social</h4>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="blog-item">
                                        <div class="blog-item__mini-thumb">
                                            <a href="" class="item-image">
                                                <img src="./images/zeen-chin- (9).jpg" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-item__mini-detail">
                                            <h4 class="title">
                                                This is fashion title
                                            </h4>
                                            <div class="item-info">
                                                <span>Jun 14, 2020</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="blog-item">
                                        <div class="blog-item__mini-thumb">
                                            <a href="" class="item-image">
                                                <img src="./images/zeen-chin- (9).jpg" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-item__mini-detail">
                                            <h4 class="title">
                                                This is long fashion title
                                            </h4>
                                            <div class="item-info">
                                                <span>Jun 14, 2020</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="blog-item">
                                        <div class="blog-item__mini-thumb">
                                            <a href="" class="item-image">
                                                <img src="./images/zeen-chin- (9).jpg" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-item__mini-detail">
                                            <h4 class="title">
                                                This is very long fashion title
                                            </h4>
                                            <div class="item-info">
                                                <span>Jun 14, 2020</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="panel">
                            <h4 class="title">Tags</h4>
                            <div class="flex-start">
                                <a class="tag" href="">Fashion</a>
                                <a class="tag" href="">Design</a>
                                <a class="tag" href="">Girls</a>
                                <a class="tag" href="">Travel</a>
                                <a class="tag" href="">Education</a>
                                <a class="tag" href="">Sex</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row sticky-top">
                    <div class="col-sm-12">
                        <form class="panel">
                            <h4 class="title">News letter</h4>
                            <p>
                                Subscribe to our newsletter and get our newest updates right on your inbox.
                            </p>
                            <input type="text" name="" id="" class="textbox full-width" placeholder="Your email">
                            <div class="br"></div>
                            <label>
                                <input type="checkbox" name="newsLetter">
                                <a href=""> I agree to the terms & conditions</a>
                            </label>
                            <div class="br"></div>
                            <button class="btn btn-default full-width">Subscribe</button>
                        </form>
                    </div>

                    <div class="col-sm-12">
                        <div class="panel">
                            <h4 class="title">Instagram</h4>
                            <p>
                                No data available.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="row">
            <div class="col-sm-12 flex-center">
                <ul class="footer-nav">
                    @if (Model.FooterConfigs != null)
                    {
                        foreach (var f in Model.FooterConfigs)
                        {
                            <li><a href="@f.Value">@f.Name</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="col-sm-12">
                <div class="flex-center">
                    <p>© 2020 Rosenstein. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <div class="move-on-top flex-center"><i class="fas fa-caret-up"></i></div>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ"
            crossorigin="anonymous"></script>
    <script src="~/Vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Vendors/slick/slick.js"></script>
    <script src="~/Client/app.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>