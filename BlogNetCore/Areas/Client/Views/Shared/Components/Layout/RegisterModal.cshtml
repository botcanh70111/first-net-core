@model BlogNetCore.Client.Models.Login.RegisterModel
<div class="row top-login">
    <div class="col-xs-12 login">
        @if (!Context.User.Identity.IsAuthenticated)
        {
            <div class="modal fade" id="registerForm" tabindex="-1" role="dialog" aria-labelledby="registerForm"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <form class="modal-content" method="post" asp-area="Client" asp-controller="Login" asp-action="Register">
                        @Html.Hidden("ReturnUrl", Context.Request.Path)
                        <div class="modal-header">
                            <a href="javascript:void(0)" type="button" class="close" data-dismiss="modal" aria-label="Close"
                               style="float: right; font-size: 2rem;">
                                <span aria-hidden="true">&times;</span>
                            </a>
                            <h4 class="modal-title" id="exampleModalLabel">Login</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="FirstName">First Name</label>
                                <input type="text" asp-for="FirstName" class="textbox" required>
                            </div>
                            <div class="form-group">
                                <label for="LastName">Last Name</label>
                                <input type="text" asp-for="LastName" class="textbox" required>
                            </div>
                            <div class="form-group">
                                <label for="UserName">User Name</label>
                                <input type="text" asp-for="UserName" class="textbox" required>
                            </div>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" asp-for="Email" class="textbox" required>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" asp-for="Password" class="textbox" required>
                            </div>
                            <div class="form-group">
                                <label for="Password">Confirm Password</label>
                                <input type="password" asp-for="ConfirmPassword" class="textbox" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        }

    </div>

</div>